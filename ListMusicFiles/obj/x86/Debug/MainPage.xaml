<Page
    x:Class="ListMusicFiles.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListMusicFiles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <MediaElement x:ConnectionId='2'  Name="MyMediaElement"  AutoPlay="False"  HorizontalAlignment="Left" MaxHeight="500" MaxWidth="50" Margin="0,40,0,40"/>
        <GridView x:ConnectionId='3' Name="Songs"  Height="500" Width="500" Margin="50" >
            <GridView.ItemTemplate>
                <DataTemplate                         >
                    <StackPanel x:ConnectionId='5' Orientation="Horizontal" HorizontalAlignment="Left" Width="500" Height="50" VerticalAlignment="Bottom" Margin="10,0,0,20">
                        <TextBlock x:ConnectionId='6'                       Margin="1" TextWrapping="Wrap" >
                            <Hyperlink x:ConnectionId='7'                         x:Name="Title"                             />
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

